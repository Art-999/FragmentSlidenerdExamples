<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BBFF"
    tools:context="com.example.arturmusayelyan.fragmentslidenerdexamples.MyMainFragmnentsActivity">

    <fragment
        android:id="@+id/fragment1"
        android:name="com.example.arturmusayelyan.fragmentslidenerdexamples.FragmentFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.arturmusayelyan.fragmentslidenerdexamples.FragmentSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment1"/>

</RelativeLayout>
